{
  "variables": {
    "packer_hostname": "centos8-katello-devel-stable",
    "password": "vagrant",
    "user": "vagrant",
    "ansible_variables": "{}",
     "iso_name": "CentOS-Stream-8-x86_64-20201203-boot.iso"
  },
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "2s",
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "sha256:b4bb35e2c074b4b9710419a9baa4283ce4a02f27d5b81bb8a714b576e5c2df7a",
      "iso_url": "http://distro.ibiblio.org/centos/8-stream/isos/x86_64/CentOS-Stream-8-x86_64-latest-boot.iso",
      "name": "{{ user `packer_hostname` }}.example.com",
      "qemuargs": [
        [
          "-m",
          "12G"
        ],
        [
          "-smp",
          "4"
        ]
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "{{user `password`}}",
      "ssh_timeout": "20m",
      "ssh_username": "{{user `user`}}",
      "type": "qemu"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "{{user `packer_hostname`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "PACKER_HOSTNAME={{user `packer_hostname`}}.example.com"
      ],
      "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/fix_hostname.sh"
      ],
      "type": "shell"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=../ansible.cfg"
      ],
      "extra_arguments": ["--extra-vars", "{{ user `ansible_variables` }}"],
      "playbook_file": "../playbooks/katello_devel.yml",
      "type": "ansible"
    }
  ]
}